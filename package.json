{
  "name": "amiri",
  "version": "3.0.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "css": "tailwindcss -i src/assets/styles/main.css -o src/assets/styles/main.min.css -m -w -p",
    "build:css": "tailwindcss -i src/assets/styles/main.css -o src/assets/styles/main.min.css -m",
    "build": "react-scripts build",
    "deploy": "yarn run build:css && yarn run build && gh-pages -d build",
    "gh-pages": "gh-pages -d build",
    "lint": "eslint --fix src/**/*.{js,jsx}",
    "pretty": "prettier --write \"src/**/*.{js,jsx}\"",
    "prepare": "husky"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,json}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^4.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "tailwindcss": "^3.1.8"
  }
}
